/* components/videoPlayer/videoPlayer.wxss */

/* 视频 */
video {
  width: 688rpx;
  height: 360rpx;
  border-radius: 28rpx;
}

.video-box {
  position: relative;
}

.video-box .poster {
  width: 688rpx;
  height: 360rpx;
  border-radius: 28rpx;
  background-color: #000000;
}

.video-box .playbtn {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 41%;
  bottom: 34%;
}

/*视频信息*/
.title {
  font-size: 40rpx;
}

.info-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* width: 300rpx; */
}

.content {
  font-size: 30rpx;
  color: #A9A9A9
}



/*视频的所有的信息*/
.down-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx
}
/*收藏*/
.collect-img {
  width: 40rpx;
  height: 40rpx;
}

.collect-text {
  font-size: 30rpx
}

.collect {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 16rpx;
}

.toTop {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  right: 50rpx;
  bottom: 20rpx;
}

.toTop-img {
  width: 100rpx;
  height: 100rpx;
}


.box {
  width: 100%;
  height: 310rpx;
}

.fixed {
  width: 100%;
  position: fixed;
  top: 0rpx;
  background-color: #ffffff;
  z-index: 99;
}

.collect-container {
  width: 100rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}