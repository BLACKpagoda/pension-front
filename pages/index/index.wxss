/* pages/recommend/recommend.wxss */
.search-container {
    width: 692rpx;
    margin: 12rpx auto 38rpx
}

.menu-button-container {
    width: 100%
}

.course-container {
    width: 692rpx;
    margin: 30rpx auto 0rpx;
}

/* 视频 */
video {
    width: 688rpx;
    height: 360rpx;
    border-radius: 28rpx;
}

.video-box {
    position: relative;
}

.video-box .poster {
    width: 688rpx;
    height: 360rpx;
    border-radius: 28rpx;
    background-color: #000000;
}

.video-box .playbtn {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    left: 41%;
    bottom: 34%;
}

/*视频信息*/
.title {
    font-size: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;

}

.info-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 545rpx;
}

.content {
    font-size: 30rpx;
    color: #A9A9A9
}
/*加载更多*/
.loading-container {
    display: flex;
    justify-content: center;
    margin-bottom: 40rpx;
    margin-top: 30rpx;
}

.loading-container text {
    color: #A9A9A9;
    font-size: 30rpx;
    line-height: 40rpx;
}
/*视频的所有的信息*/
.down-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx
}
/*收藏*/
.collect-img {
    width: 40rpx;
    height: 40rpx;
}

.collect-text {
    font-size: 30rpx
}

.collect {
    display: flex;
    flex-direction: row;
    align-items: center;
    /* margin-right: 16rpx; */
}

.toTop {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    right: 50rpx;
    bottom: 20rpx;
}

.toTop-img {
    width: 100rpx;
    height: 100rpx;
    opacity: 0.8;
}


.box {
    width: 100%;
    height: 310rpx;
}

.fixed {
    width: 100%;
    position: fixed;
    top: 0rpx;
    background-color: #ffffff;
    z-index: 99;
}

.collect-container {
  /* display: inline-block; */
  width: 130rpx;
}

/* 分类 */
.type {
    display: flex;
    justify-content: center;
}

.type-container {
    width: 560rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.type-box {
    margin-right: 20rpx;
}