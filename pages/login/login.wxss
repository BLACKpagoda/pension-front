/* pages/login/login.wxss */
.container{
  height: 650px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}

.logo {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login {
  width: 86%;
  margin-top: 200rpx;
  border: 1px #D90000 solid;
  background-color: #fff;
  border-radius: 36rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.pointerLogin {
  color: #D90000;
  font-size: 38rpx;
}

.footer {
  position: absolute;
  bottom: 40rpx;
  font-size: 30rpx;
  color: #73737A;
}